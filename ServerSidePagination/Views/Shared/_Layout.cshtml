<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link href="~/Scripts/DataTables-1.11.2/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Scripts/datepicker/bootstrap-datetimepicker.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

        <div class="modal-busy" id="loader" style="display: none">
            <div class="center-busy" id="test-git">
                <img src="~/Content/img/spinner.gif" />
            </div>
        </div>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")*@
    @*<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>*@
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/DataTables-1.11.2/js/jquery.dataTables.min.js"></script>
    <script>
        $(document)
            .ajaxStart(function () {
                $('#loader').show();
            })
            .ajaxStop(function () {
                $('#loader').hide();
            }).ajaxError(function (event, xhr, ajaxOptions, thrownError) {
                if (xhr.status == 403) {
                }
                else if (xhr.status == 401) {
                }
            });
    </script>
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/datepicker/moment/moment.min.js"></script>
    <script src="~/Scripts/datepicker/moment/moment-with-locales.js"></script>
    <script src="~/Scripts/datepicker/moment/moment-hijri.js"></script>
    <script src="~/Scripts/datepicker/bootstrap-hijri-datetimepicker.js"></script>
</body>
</html>
